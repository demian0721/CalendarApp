<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  ImageView Style  -->
    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedBig">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedMedium">
        <item name="cornerSize">8dp</item>
    </style>

    <!--  Toolbar Title Style  -->
    <style name="ToolbarTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarTitle.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTitle.white.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Calendar Head Style  -->
    <style name="CalendarHead">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalendarHead.Main">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_1000</item>
    </style>

    <style name="CalendarHead.Side">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <!--  Calendar Day Style  -->
    <style name="CalendarDay">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarDay.Sun">
        <item name="android:textColor">@color/red_800</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CalendarDay.Sat">
        <item name="android:textColor">@color/blue_800</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--  Calendar Date Style  -->
    <style name="CalendarDate">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="CalendarDate.Dimmed">
        <item name="android:textColor">@color/grey_500</item>
    </style>
    <style name="CalendarDate.Selected">
        <item name="android:textColor">@color/blue_900</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CalendarDate.Today">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <!--  Todo Style  -->
    <style name="TodoTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>